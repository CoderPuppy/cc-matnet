function createServer(net, cache)
	if type(cache) ~= 'table' then cache = {} end

	local server = {}

	function server.run()
		return net.startDaemon('arpd')
	end

	function server.daemon()
		while true do
			local ev = coroutine.yield()
			local packet = ev[2]

			if ev[1] == 'lci' then
				if packet.command == 'daemon:stop' then
					return
				end
			elseif ev[1] == 'network' then
			end
		end
	end

	net.addDaemon('arpd', server.daemon)

	return server
end

function createClient(net, cache)
	if type(cache) ~= 'table' then cache = {} end
	
	local client = {}

	function client.run()
		return true
	end

	return client
end